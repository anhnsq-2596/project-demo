<%= form_for @post do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.text_area :content, class: "form-control",
    placeholder: true %>

  <%= select_tag "tags", options_from_collection_for_select(
    @tags, 'id', 'label', '1'), multiple: true, 
    prompt: "---#{t("posts.create.select_tag")}---", class: "form-select" %>

  <%= f.submit t("posts.create.btn_text"), class: "btn btn-dark form-control" %>

<% end %>
